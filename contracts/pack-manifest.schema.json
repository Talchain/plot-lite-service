{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://talchain.dev/schemas/pack-manifest.schema.json",
  "title": "Evidence Pack Manifest",
  "type": "object",
  "required": ["schema", "created_utc", "path", "files"],
  "properties": {
    "schema": { "const": "pack.manifest.v1" },
    "created_utc": { "type": "string", "format": "date-time" },
    "path": { "type": "string", "minLength": 1 },
    "commit": { "type": "string" },
    "engine": { "type": "string" },
    "files": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["path", "size_bytes"],
        "properties": {
          "path": { "type": "string" },
          "size_bytes": { "type": "integer", "minimum": 0 },
          "sha256": { "type": "string" }
        },
        "additionalProperties": true
      }
    }
  },
  "additionalProperties": true
}
