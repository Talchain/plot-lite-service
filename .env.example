# Server Configuration
PORT=4311
REQUEST_TIMEOUT_MS=5000
CORS_DEV=0

# Rate Limiting (off by default for daily dev)
RATE_LIMIT_ENABLED=0

# Proxy Configuration
# Set to 1 if behind a proxy (Vercel, Cloudflare, Nginx), otherwise 0
TRUST_PROXY=0

# Rate Limit Configuration (applied when RATE_LIMIT_ENABLED=1)
# IP-based limits (fallback when no user/org headers)
RL_IP_BURST=120
RL_IP_SUSTAINED_PER_MIN=600

# User-based limits (when x-user-id header present)
RL_USER_BURST=180
RL_USER_SUSTAINED_PER_MIN=900

# Organization-based limits (when x-org-id header present, takes priority)
RL_ORG_BURST=300
RL_ORG_SUSTAINED_PER_MIN=1500

# Cache Configuration
CACHE_ENABLED=0
CACHE_DRAFT_FLOWS_TTL_MS=300000
CACHE_CRITIQUE_TTL_MS=600000
CACHE_L1_MAX_KEYS=1000
CACHE_MAX_BODY_BYTES=32768

# Optional L2 Cache (Redis via Upstash)
# UPSTASH_REDIS_REST_URL=https://your-redis.upstash.io
# UPSTASH_REDIS_REST_TOKEN=your-token

# Optional Features
TEST_ROUTES=0
OPS_SNAPSHOT=0