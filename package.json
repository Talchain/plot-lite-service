    "@fastify/cors": "^11.1.0",
    "@fastify/helmet": "^13.0.1",
    "ajv": "^8.17.1",
    "fastify": "^5.6.0",
    "pino": "^9.11.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@types/node": "^24.5.2",
    "autocannon": "^8.0.0",
    "husky": "^9.1.6",
    "standard-version": "^9.5.0",
    "tsx": "^4.20.5",
