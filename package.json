  "main": "index.js",
  "directories": {
    "doc": "docs",
    "lib": "lib"
  },
  "scripts": {
    "dev": "tsx watch src/main.ts",
    "build": "tsc -p tsconfig.json && tsc -p tsconfig.tools.json",
    "start": "node dist/main.js",
    "test": "node tools/run-all-tests.js",
    "ci": "npm ci && npm run build && npm test",
    "replay": "node tools/replay-fixtures.js",
    "loadcheck": "node tools/loadcheck.js",
    "release": "standard-version",
    "release:minor": "standard-version --release-as minor",
    "release:major": "standard-version --release-as major",
    "prepare": "husky install",
    "audit:prod": "npm audit --production",
    "pr:verify": "tools/ci/pr-verify.sh"
  },
