{
  "name": "jobs-service",
  "version": "1.0.0",
  "description": "Durable background jobs service with progress, retries, and per-org concurrency",
  "main": "dist/main.js",
  "type": "module",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "dev": "tsx watch src/main.ts",
    "start": "node dist/main.js",
    "build": "tsc",
    "test": "vitest run",
    "test:int": "vitest run --config vitest.integration.config.ts",
    "test:watch": "vitest",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "typecheck": "tsc --noEmit",
    "webhook:listen": "tsx tools/webhook-listener.ts",
    "job:demo": "tsx tools/demo-job.ts",
    "job:flaky": "tsx tools/flaky-job.ts",
    "jobs:list": "tsx tools/list-jobs.ts",
    "jobs:dlq": "tsx tools/list-dlq.ts"
  },
  "keywords": ["jobs", "queue", "background", "scheduler", "fastify"],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "fastify": "^4.24.3",
    "@fastify/helmet": "^11.1.1",
    "@fastify/cors": "^8.4.0",
    "@fastify/swagger": "^8.12.0",
    "@fastify/swagger-ui": "^2.0.0",
    "zod": "^3.22.4",
    "ulid": "^2.3.0",
    "pino": "^8.16.2",
    "node-cron": "^3.0.3",
    "@opentelemetry/api": "^1.7.0",
    "@opentelemetry/sdk-node": "^0.45.0",
    "@opentelemetry/instrumentation-fastify": "^0.33.0",
    "@opentelemetry/instrumentation-http": "^0.45.0"
  },
  "devDependencies": {
    "@types/node": "^20.9.0",
    "@types/node-cron": "^3.0.11",
    "typescript": "^5.2.2",
    "tsx": "^4.4.0",
    "vitest": "^0.34.6",
    "@typescript-eslint/eslint-plugin": "^6.11.0",
    "@typescript-eslint/parser": "^6.11.0",
    "eslint": "^8.53.0",
    "prettier": "^3.1.0",
    "openapi-typescript": "^6.7.1"
  }
}